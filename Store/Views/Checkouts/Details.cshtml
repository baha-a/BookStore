@model Store.Data.Checkout

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Checkout</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckedOutDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckedOutDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DuoDate)
        </dt>
        <dd class="col-sm-10">
            @Model.DuoDate.ToString("d")
        </dd>
    </dl>
    @if (Model.Deleted)
    {
        <span class="text-danger">this item deleted</span>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
