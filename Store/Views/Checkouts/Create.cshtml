@model Store.Data.Checkout
@using Store.Helpers
@{
    ViewData["Title"] = "Create";
}

<h4>Create new Checkout</h4>
<hr />
@if(ViewBag.DuplicateKey == true)
{
    <div class="alert alert-danger">
        <span>Could not checkout this book</span>
    </div>      
}
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-sm-12 col-md-3">
            <label asp-for="UserId" class="control-label"></label>
            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        </div>
        <div class="col-sm-12 col-md-3">
            <label asp-for="BookId" class="control-label"></label>
            <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
        </div>
        <div class="col-sm-12 col-md-3">
            <label asp-for="CheckedOutDate" class="control-label"></label>
            <input class="form-control" readonly value="@DateTime.Now" />
        </div>
        <div class="col-sm-12 col-md-3">
            <label asp-for="DuoDate" class="control-label"></label>
            <input class="form-control" readonly value="@DateTime.Now.AddWeeks(3).ToString("d")" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
 
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
