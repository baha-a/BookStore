@model Store.Data.Checkout

@{
    ViewData["Title"] = "Create";
}

<h4>Create new Checkout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CheckedOutDate" class="control-label"></label>
                <input asp-for="CheckedOutDate" class="form-control" readonly value="@DateTime.Now"/>
            </div>
            <div class="form-group">
                <label asp-for="DuoDate" class="control-label"></label>
                <input asp-for="DuoDate" class="form-control" readonly value="@DateTime.Now.AddDays(7 * 3)"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
